@{
ViewData["Title"] = "Home Page";
}
<!--birçok listeiçin generic sınıf-->
@model IEnumerable<Product>
    <div class="card card-body my-3">
        <form asp-action="Index" method="get">
            <div class="container">
                <div class="row">
                    <div class="col-md-11"><select name="category" class="form-select"
                            asp-items="@ViewBag.Categories"><!--name gore filtreler-->
                            <option value="0">Hepsi</option><!--default deger ataması yaparız devamını listeden alır-->
                        </select></div>
                    <div class="col-md-1"><button type="submit" class="btn btn-primary">Filtrele</button></div>
                    <!--12 eşit parcaya boler satırı -->
                </div>
            </div>
        </form>
    </div>
    <table class="table table-bordered table-striped" style="font-size:18px;">
        <thead>
            <!--Html değiken veya display varsa o ismi alır modelin çeşitli modellerden birden fazla tablo yapamamaya yarar-->
            <tr>
                <th style="width: 20px;">@Html.DisplayNameFor(m=> m.Id)</th>
                <th style="width: 100px;">@Html.DisplayNameFor(m=> m.Image)</th>
                <th>@Html.DisplayNameFor(m=> m.Name)</th>
                <th style="width: 80px;">@Html.DisplayNameFor(m=> m.Price)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prd in Model){
            <tr>
                <td>@prd.Id</td>
                <td><img src="~/img/@prd.Image" alt="" class="img-fluid"></td>
                <td>@prd.Name</td>
                <td>@prd.Price</td>
                <td>
                    <a href="/Home/Edit/@prd.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/Home/Delete/@prd.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>