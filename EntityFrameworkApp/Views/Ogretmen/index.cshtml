@model IEnumerable<Ogretmen>
    <h2>Öğretmen Kayıtları</h2>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width:100px;">@Html.DisplayNameFor(m=>m.OgretmenId)</th>
                <th>@Html.DisplayNameFor(m=>m.AdSoyad)</th>
                <th style="width:150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var kayit in Model){
            <tr>
                <td>@kayit.OgretmenId</td>
                <td>@kayit.AdSoyad</td>
                
                <td><a href="/Ogretmen/Edit/@kayit.OgretmenId" class="btn btn-sm btn-primary"
                        style=margin-right:4px;>Edit</a>
                    <a href="/Ogretmen/Delete/@kayit.OgretmenId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>