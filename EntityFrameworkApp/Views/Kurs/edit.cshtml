@{
ViewData["Title"] = "Create Page";
}
@section Link{
<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Ogrenci" asp-action="Index">Öğrenciler</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Kurs" asp-action="Index">Kurslar</a>
    </li>
</ul>}

@model Kurs
<div class="row">
    <div class="col-8">
        <form asp-action="edit" method="post">
            <input type="hidden" asp-for="KursId">
            <div class="mb-3">
                <label asp-for="Baslik" class="form-label">
                    Başlık
                </label>
                <input asp-for="Baslik" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">
                    Öğretmen
                </label>
                <select asp-for="OgretmenId" asp-items="@ViewBag.Ogretmenler" class="form-select">
                    <option value="">Seciniz</option>
                </select>
            </div>
            <button type="submit" class="form-control btn btn-secondary">Kaydet</button>
        </form>
    </div>
    <div class="col-4">
        <div class="mb-3">
            <h2>Öğrenci Kayıtları</h2>
            <hr>
            <ul>
                @foreach(var kayit in Model.KursKayitlari){
                <li>@kayit.Ogrenci.AdSoyad</li>
                }
            </ul>
        </div>

    </div>
</div>