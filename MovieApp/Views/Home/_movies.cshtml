@model IEnumerable<Movie>
    @foreach (Movie movie in Model){
    <div class="card mb-3">
        <div class="row no-gutter">
            <div class="col-md-3">
                <img src="~/img/@movie.ImageUrl" alt="" class="card-img">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id"
                            class="link"><b>@movie.Name</b></a>

                    </h5>
                    <p class="card-text">
                        @movie.Description
                    </p>
                    <p class="card text">
                        <small class="text-muted">3 Days Ago</small>
                    </p>
                </div>
            </div>
        </div>
    </div>
    }