@model PostsViewModel
<div class="row">
    <div class="col-md-8">
        <div class="bg-white p-4">
            <h2 class="h4 mb-4">Pop√ºler Postlar</h2>
            @foreach (var post in Model.Posts){
            <div class="card bg-transparent border-0 mb-3">
                <div class="row">
                    <div class="col-4">
                        <img width=200 src="~/img/@post.Image" alt="" class="img-fluid">
                    </div>
                    <div class="col-8">
                        <h5><a href="posts/@post.Url" class="btn-link fw-">@post.Title</a>
                        </h5>
                        <p>@post.Content</p>
                        <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Web Devolement</a>
                    </div>
                </div>
                <hr class="my-3">
            </div>
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a href="" class="page-link">1</a></li>
                    <li class="page-item"><a href="" class="page-link">2</a></li>
                    <li class="page-item"><a href="" class="page-link">3</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-md-4">

        @await Component.InvokeAsync("TagsMenu")
    </div>
</div>